@using WebApplication3.Models.entity
@model List<TBLURUNLER>
@{
    ViewData["Title"] = "Kadin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

</head>
<body>

    <dv class="card">
        <div class="card-header text-center">
            <button type="button" class="btn btn-primary">Sepete En Çok Eklenenler</button>
            <button type="button" class="btn btn-primary">En Çok Öne Çıkanlar</button>
            <button type="button" class="btn btn-primary">Flaş İndirimler</button>
        </div>

        <ul class="list-group">
            @foreach (var urn in Model.Where(u => u.URUNKATEGORI == 1))
            {
                <div class="card">
                    <img class="card-img-top" src="..." alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@urn.URUNAD</h5>
                        <p class="card-text">@urn.FIYAT TL</p>
                        <a href="#" class="btn btn-primary">Sepete ekle</a>
                    </div>
                </div>

            }


        </ul>

</body>
</html>